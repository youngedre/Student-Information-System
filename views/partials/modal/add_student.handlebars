<section id="add-child"> 
  <div class="content">
    <div class="grid-container">
      <!-- Tab headings -->
      <ul class="tabs" 
          data-deep-link="true" 
          data-update-history="true" 
          data-deep-link-smudge="true" 
          data-deep-link-smudge-delay="500" 
          data-tabs 
          id="add-child-tabs">

        <li id="child-g" class="tabs-title title-tab-green"><a href="#child-general" aria-selected="true" class="is-active">General</a></li>
        <li id="child-e" class="tabs-title title-tab-red"><a href="#child-emergency">Emergency Information</a></li>
        <li id="child-a" class="tabs-title title-tab-orange"><a href="#child-allergies">Allergies</a></li>
        <li id="child-p" class="tabs-title title-tab-blue"><a href="#child-approved-pickup">Approved Pickup</a></li>
        <li id="child-n" class="tabs-title title-tab-purple"><a href="#child-notes">Notes</a></li>

      </ul>
      <!-- Table Headings -->
      <div class="tabs-content" data-tabs-content="add-child-tabs">
        <!-- Section 1: General -->
        <div class="tabs-panel is-active" id="child-general">
          <form id= "create-form">
              <div class="form-row">
                <div class="form-group2">
                  <label for="firstName">First Name</label>
                  <input type="text" class="form-control" id="firstName" placeholder="John">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="lastName">Last Name</label>
                  <input type="text" class="form-control" id="lastName" placeholder="Doe">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="birthDate">Birthdate (Format: YYYY-MM-DD)</label>
                  <input type="text" class="form-control" id="birthDate" placeholder="2015-01-17">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="gender">Gender</label>
                  <input type="text" class="form-control" id="gender" placeholder="Male or Female">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="ethnicity">Ethnicity</label>
                  <input type="text" class="form-control" id="ethnicity" placeholder="Hispanic or non-Hispanic">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="language">What language do you speak at home?</label>
                  <input type="text" class="form-control" id="language" placeholder="English / Spanish">
                </div>
              </div>
              <div class="form-row">
                <label for="exampleFileUpload" class="button">Upload File</label>
                <input type="file" id="exampleFileUpload" class="show-for-sr">
                </div>
            <a type="submit" href="#child-emergency" id="new-student-main" class="button expanded">Next</a>
          </form>
        </div>
        <!-- Section 2: Emergency Information -->
        <div class="tabs-panel" id="child-emergency">
          <form>
            <div class="form-row">
              <div class="form-group">
                <label for="emergencyContactName">Emergency Contact Name</label>
                <input type="text" class="form-control" id="emergencyContactName" placeholder="John Doe">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="emergencyContactPhone">Emergency Contact Phone Number</label>
                <input type="text" class="form-control" id="emergencyContactPhone" placeholder="(919) 999-9999">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="emergencyContactRelation">Emergency Contact Relationship</label>
                <input type="text" class="form-control" id="emergencyContactRelation" placeholder="Grandparent">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="doctorName">Doctor's Name</label>
                <input type="text" class="form-control" id="doctorName" placeholder="John Doe">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="doctorPhone">Doctor's Phone Number</label>
                <input type="text" class="form-control" id="doctorPhone" placeholder="(919) 999-9999">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="dentistName">Dentist's Name</label>
                <input type="text" class="form-control" id="dentistName" placeholder="John Doe">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="dentistPhone">Dentist's Phone Number</label>
                <input type="text" class="form-control" id="dentistPhone" placeholder="(919) 999-9999">
              </div>
            </div>

            <a type="submit" href="#child-allergies" id="new-student-medical-info" class="button expanded">Next</a>
          </form>
        </div>
        <!-- Section 3: Allergies -->
        <div class="tabs-panel" id="child-allergies">
          <form>

            <div class="form-row">
              <!-- Checkbox for allergies -->
              <div class="form-group col-md-12">
                <div class="grid-x grid-padding-x">
                  <fieldset>
                    <legend>Does Your child have any allergies?</legend>
                    <input type="checkbox" name="confirm-allergies" value="yes" id="confirm-allergies-yes"><label for="confirm-allergies-yes">Yes</label>
                    <input type="checkbox" name="confirm-allergies" value="no" id="confirm-allergies-no"><label for="confirm-allergies-no">No</label>
                  </fieldset>
                </div>
                <label for="allergyDescription">Allergies (if any)</label>
                <input type="text" class="form-control" id="allergyDescription" placeholder="Peanuts">
              </div>
            </div>

            <div class="grid-x grid-padding-x">
              <fieldset>
                <legend>If you answered yes, how severe are your child's allergies?</legend>
                <input type="radio" name="allergies" value="Life-Threatening" id="Life-Threatening"><label for="Life-Threatening">life Threatening</label>
                <input type="radio" name="allergies" value="Blue" id="Severe"><label for="Severe">Severe</label>
                <input type="radio" name="allergies" value="Yellow" id="Moderate"><label for="Moderate">Moderate</label>
              </fieldset>
            </div>

            <a type="submit" href="#child-approved-pickup" id="new-student-allergy" class="button expanded">Next</a>
          </form>
        </div>
        <!-- Section 4: Approved Pickup -->
        <div class="tabs-panel" id="child-approved-pickup">
          <form>
            <div class="form-row">
              <div class="form-group">
                <label for="pickupFirstName">Approved Pickup: First Name</label>
                <input type="text" class="form-control" id="pickupFirstName" placeholder="John">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="pickupLastName">Approved Pickup: Last Name</label>
                <input type="text" class="form-control" id="pickupLastName" placeholder="Doe">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="pickupPhoneNumber">Approved Pickup: Phone Number</label>
                <input type="text" class="form-control" id="pickupPhoneNumber" placeholder="(919) 999-9999">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="pickupRelation">Approved Pickup: Relation to Student</label>
                <input type="text" class="form-control" id="pickupRelation" placeholder="Grandparent / Babysitter">
              </div>
            </div>

            <a type="submit" href="#child-notes"  id="new-student-pickup-info" class="button expanded">Next</a>
          </form>
        </div>
        <!-- Section 5: Notes --> 
        <div class="tabs-panel" id="child-notes">
          <form>
            <div class="form-row">
              <div class="form-group">
                <label for="parent-notes"></label>
                <div class="large-12 columns">
                  <fieldset>
                    <legend>Additional notes for the teacher. </legend>
                    <textarea placeholder="Additional notes" id="notes"></textarea>
                  </fieldset>
                </div>
              </div>
            </div>
            <a type="submit" id="add-new-student" class="button expanded">Submit Information</a>
          </form>  
        </div>

      </div>
    </div>
  </div>
</section>  <!-- End of Add Child Section -->