<section id="teacher-profile">
    <div class="content">
        <div class="grid-container">

            <ul class="tabs" 
                data-deep-link="true" 
                data-update-history="true" 
                data-deep-link-smudge="true" 
                data-deep-link-smudge-delay="500" 
                data-tabs 
                id="teacher-tabs">
                <li class="tabs-title"><a href="#teacher1" aria-selected="true" class="is-active">Class Room Details</a></li>
                <li id="teacher-2" class="tabs-title"><a href="#teacher2">Contact Details</a></li>
            </ul>

            <div class="tabs-content" data-tabs-content="teacher-tabs">
                <!-- Section 1: Class Room Details -->
                <div class="tabs-panel is-active" id="teacher1">
                    <form id= "create-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <input type="text" class="form-control" id="firstName" value="{{teacherData.firstName}}" placeholder="Jane">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <input type="text" class="form-control" id="lastName" value="{{teacherData.lastName}}" placeholder="Doe">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="employeeId">Teacher ID</label>
                                <input type="text" class="form-control" id="employeeId" value="{{teacherData.employeeId}}" placeholder="#24681012">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="roomNumber">Class Room Number</label>
                                <input type="text" class="form-control" id="roomNumber" value="{{teacherData.roomNumber}}" placeholder="13">
                            </div>
                        </div>

                        <a type="submit" href="#teacher2" id="new-teacher-main" class="button expanded">Next</a>
                    </form>
                </div>
                <!-- Section 2: panel 2 -->
                <div class="tabs-panel" id="teacher2">
                    <form>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" id="email" value="{{teacherData.email}}" placeholder="teacher@gmail.com">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="phoneNumber">Phone Number</label>
                                <input type="text" class="form-control" id="phoneNumber" value="{{teacherData.phoneNumber}}" placeholder="(919) 999-9999">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="streetAddress">Street Address</label>
                                <input type="text" class="form-control" id="streetAddress" value="{{teacherData.streetAddress}}" placeholder="311 Main Street">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="city">City</label>
                                <input type="text" class="form-control" id="city" value="{{teacherData.city}}" placeholder="Durham">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="state">State</label>
                                <input type="text" class="form-control" id="state" value="{{teacherData.state}}" placeholder="NC">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="zipcode">Zip Code</label>
                                <input type="text" class="form-control" id="zipcode" value="{{teacherData.zipcode}}" placeholder="27713">
                            </div>
                        </div>

                        <a type="submit" id="add-new-teacher" class="button expanded teach">Submit</a>
                        
                    </form>
                    
                </div>
                <p class="text-center" id="teacher-info-updated">Thank you {{teacherData.firstName}}, your information has been updated!</p>
            </div>

        </div>
    </div>
</section>